extends templates/layout.pug 

block content
    .page-grid
        .content.text-center
            img.large-logo.margin-bottom.margin-top(src="images/arramu-logo.png", alt="Arramu logo")
            .site-description
                p Hand crafted slate art,
                    br 
                    | made with love in wales
        
        .content.margin-bottom
            .grid.small-col
                .image-container
                    img.object-fit-cover(src="images/jonny-working.png", alt="alt")
                .image-container
                    img.object-fit-cover(src="images/product-image-9.png", alt="alt")
        
        .content.margin-bottom.text-center
            a.button(href="") Shop now

    .page-grid    
        img.about-shards(src="images/shards-from-left.png", alt="shards")
