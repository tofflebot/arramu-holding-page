            .grid.small-col.margin-bottom
                .image-container.small
                    img.object-fit-cover(src="images/product-image-1.jpg", alt="alt")
                .image-container.medium
                    img.object-fit-cover(src="images/product-image-2.jpeg", alt="alt")
                .image-container.large
                    img.object-fit-cover(src="images/product-image-3.jpeg", alt="alt")
                .image-container.small
                    img.object-fit-cover(src="images/product-image-11.png", alt="alt")
                .image-container.small
                    img.object-fit-cover(src="images/product-image-7.png", alt="alt")
                .image-container.medium
                    img.object-fit-cover(src="images/product-image-8.png", alt="alt")
            .grid.medium-col.large-margin-bottom
                .image-container.large
                    img.object-fit-cover(src="images/product-image-9.png", alt="alt")
                .image-container.small
                    img.object-fit-cover(src="images/product-image-10.png", alt="alt")
            a.button(href="") Shop now
        
            figure.rounded-corners.homepage-video
                #player.plyr__video-embed
                    iframe(src="https://www.youtube.com/embed/pnRNdbqXu1I&t?origin=https://plyr.io&iv_load_policy=3&modestbranding=1&playsinline=1&showinfo=0&rel=0&enablejsapi=1" allowfullscreen="" allowtransparency="" allow="autoplay")

