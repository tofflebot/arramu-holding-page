        img.contact-shards(src="images/shards-from-right.png", alt="shards")
        .content.margin-bottom.contact
            .grid.large-col-auto-fill
                div
                    h2 Get in touch
                    p We'd love to talk hear from you
                    h3 Email
                    a(href="#") hello@arramu.com
                    h3 Phone
                    a(href="") +44 (0) 7880 077 600
